		<script>
			$(document).ready(function() {
				// init Isotope
				var $grid = $('.our-listing').isotope({
					itemSelector: '#carListing',
					layoutMode: 'fitRows',
				});
				$grid.isotope({ filter: '*' });
			});

			// filter cars by make and model on search button click using isotop
			$('#searchBtn').click(function() {
				var make = document.getElementById('makeSelect').value;
				var model = document.getElementById('modelSelect').value;
				var $grid = $('.our-listing').isotope({
					itemSelector: '#carListing',
					layoutMode: 'fitRows',
				});

				if(make == 'Select Makes' && model == 'Select Models') {
					$grid.isotope({ filter: '*' });
				} else if(make == 'Select Makes') {
					$grid.isotope({ filter: '[data-filter-model="' + model + '"]' });
				} else if(model == 'Select Models') {
					$grid.isotope({ filter: '[data-filter-make="' + make + '"]' });
				} else {
					$grid.isotope({ filter: '[data-filter-make="' + make + '"][data-filter-model="' + model + '"]' });
				}
			});
		</script>
