<script>
  let car = {{car | json_encode | raw}};
  $(document).ready(function() {
    var dots = $('.owl-dot');
    Object.keys(dots).forEach(function(key) {
      try {
        dots[key].style.backgroundImage = "url('" + car.image[key] + "')";
        dots[key].style.backgroundPosition = "center center";
        dots[key].style.backgroundSize = "cover";
        dots[key].style.marginBottom = "12px";
        dots[key].style.borderRadius = "5px";
        dots[key].style.marginLeft = "15px";
      } catch (error) {
      }
    });

    document.getElementById("contactForm").addEventListener("submit", function(e) {
      e.preventDefault();
      let firstname = document.getElementById("firstname").value;
      let lastname = document.getElementById("lastname").value;
      let phone = document.getElementById("phone").value;
      let email = document.getElementById("email").value;
      let message = document.getElementById("message").value;
      let origin = '{{car.name}}';
      let data = {
        firstname: firstname,
        lastname: lastname,
        email: email,
        phone: phone,
        message: message,
        origin: origin,
      };

      fetch("/index.php/message/", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(data),
      }).then(response => response.json()).then(data => {
        if (data.status) {
          alert("Message sent successfully!");
        } else {
          alert("Please wait a few minutes and try again!");
        }
      });
    });
  });
</script>
