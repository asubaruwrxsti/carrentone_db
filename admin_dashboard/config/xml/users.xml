<!-- Users.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                     https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Users" table="users">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="username" type="string" column="username" length="255"/>
        <field name="password" type="string" column="password" length="255"/>
        <field name="date_created" type="datetime" column="date_created"/>
        <field name="currency" type="string" column="currency" length="3"/>
        <field name="last_login" type="datetime" column="last_login"/>
        <field name="last_ip" type="string" column="last_ip" length="45"/>
        <field name="is_admin" type="integer" column="is_admin"/>
    </entity>

</doctrine-mapping>
