<div class="row">
  <div class="col">
    <!-- Column -->
    <div id="cards" class="row">
      <!-- Row -->
      <!-- Revenue / Month -->
      <div class="col mt-3">
        <div class="card" style="height: 13rem; width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Revenue / Month</h5>
            <div id="loading">
              <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
              </div>
            </div>
            <canvas id="revenueMonth"></canvas>
          </div>
        </div>
      </div>

      <!-- Total / Revenue -->
      <div class="col mt-3">
        <div class="card" style="height: 8rem; width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Total Revenue</h5>
            <div id="loading">
              <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
              </div>
            </div>
            <div id="revenueDependencies" style="display: none; align-items: center;">
              <h3 id="revenueTotal"></h3>
              <h5 style="margin-left: 10px">{{currency}}</h5>
              <span id="revenueGrowth" class="text-sm font-weight-bolder" style="margin-left: auto; color: lightgreen"></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Unique Customers this month -->
      <div class="col mt-3">
        <div class="card" style="height: 9rem; width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Unique customers this month</h5>
            <div style="display: flex; align-items: center;">
              <h3 id="uniqueCustomersThisMonth"></h3>
              <span id="customerGrowth" class="text-sm font-weight-bolder" style="margin-left: auto; color: lightgreen"></span>
            </div>
            <div id="loading">
              <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Unique Customers all time -->
      <div class="col mt-3">
        <div class="card" style="height: 7rem; width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Unique customers</h5>
            <div style="display: flex; align-items: center;">
              <h3 id="uniqueCustomers"></h3>
              <span id="uniqueCustomerGrowth" class="text-sm font-weight-bolder" style="margin-left: auto; color: lightgreen"></span>
            </div>
            <div id="loading">
              <div class="spinner-border text-primary" role="status">
                <span class="sr-only"></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- /Row -->
    </div>
    <!-- /Column -->
    
          
  </div>
  <!-- /Row -->

  <!-- Col -->
  <!-- Car Orders -->
  <div class="col mt-3">
    <div class="card ignore">
      <div class="card-body">
        <h3 class="card-title">Car orders</h3>
        <canvas id="myChart"></canvas>
        <div id="loading">
          <div class="spinner-border text-primary" role="status">
            <span class="sr-only"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Col -->
</div>
<!-- /Row -->

<!-- Container -->
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <h6>Recent Orders</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Client</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Car</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date Range</th>
                  <th class="text-secondary opacity-7"></th>
                </tr>
              </thead>
              <tbody>
              {% for order in recent_orders %}
                <tr>
                  <td>
                    <div class="d-flex px-2 py-1">
                      <div class="d-flex flex-column justify-content-center">
                        <h6 class="mb-0 text-sm">{{order.firstname}} {{order.lastname}}</h6>
                        <p class="text-xs text-secondary mb-0">{{order.phone_number}}</p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="text-xs font-weight-bold mb-0">{{order.name}}</p>
                    <p class="text-xs text-secondary mb-0">Car ID: {{order.id}}</p>
                  </td>
                  <td class="align-middle text-center text-sm">
                    {% if date() < order.rental_date|date_modify('+' ~ order.rental_duration ~ ' days') %}
                      <span class="badge badge-sm bg-gradient-success">Active</span>
                    {% else %}
                      <span class="badge badge-sm bg-gradient-primary">Completed</span>
                    {% endif %}
                  </td>
                  <td class="align-middle text-center">
                    <span class="text-secondary text-xs font-weight-bold">
                      {{ order.rental_date|date('Y-m-d') }} - {{ order.rental_date|date_modify('+' ~ order.rental_duration ~ ' days')|date('Y-m-d') }}
                    </span>
                  </td>
                  <td class="align-middle">
                    <a class="text-secondary font-weight-bold text-xs" data-toggle="tooltip">
                      View
                    </a>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /Container -->

<script src="/admin_dashboard/views/dashboard/revenue.js"></script>
<script src="/admin_dashboard/views/dashboard/fetchCarData.js"></script>
<script src="/admin_dashboard/views/dashboard/fetchCardData.js"></script>