<div class="row">
  <div class="col">
    <h3>hello world</h3>
    <p>Lorem ipsum</p>
  </div>
  <div class="col">
    <canvas id="myChart"></canvas>
  </div>
</div>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: '{{vars.type}}',
    data: {
      labels: [{% for label in vars.data['labels'] %}'{{label}}',{% endfor %}],
      datasets: [{
        label: '{{vars.data.datasets["label"]}}',
        data: [{% for data in vars.data.datasets["data"] %}'{{data}}',{% endfor %}],
        borderWidth: {{vars.data.datasets["borderWidth"]}},
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: {{vars.data.options.scales.y['beginAtZero']}},
        }
      }
    }
  });
</script>