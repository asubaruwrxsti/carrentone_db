<a class="btn btn-primary btn-sm" href="/admin_dashboard/index.php/{% if view_type == 'customers' %}messages{% else %}cars{% endif %}">Back<i class="fas fa-arrow-left text-sm ms-1" aria-hidden="true"></i></a>
<div class="container">
    <div class="row">
        <div class="card-body pt-4 p-3">
            {% if view_type == 'customers' %}
                <ul class="list-group" id="list-group">
                    <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                    <div class="d-flex flex-column">
                        <span class="mb-2 text-xs">Phone Number: <a href="tel:{{data.phone_number}}" class="text-dark font-weight-bold ms-sm-2">{{data.phone_number}}</a></span>  
                        <span class="mb-2 text-xs">Email Address: <a href="mailto:{{data.email}}" class="text-dark ms-sm-2 font-weight-bold">{{data.email}}</a></span>
                        <span class="text-xs">Created at: <span class="text-dark ms-sm-2 font-weight-bold"></span>{{data.created_at}}</span>
                    </div>
                    </li>
                </ul>
            {% endif %}
        </div>
        <p class="text-center" id="noOrders" style="display: none;">No previous orders</p>
        <div class="col" id="orderList" style="display: block;">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-6 d-flex align-items-center">
                    <h6 class="mb-0">Invoices</h6>
                    </div>
                </div>
                </div>
                <div class="card-body p-3 pb-0">
                <ul class="list-group">
                    {% for invoice in invoices %}
                    <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                    <div class="d-flex flex-column">
                        <h6 class="mb-1 text-dark font-weight-bold text-sm">{{invoice.rental_date}}</h6>
                        <span class="text-xs">{{invoice.car_name}}</span>
                    </div>
                    <div class="d-flex align-items-center text-sm">
                        {{invoice.price * invoice.rental_duration}} {{currency}}
                        <a href="/admin_dashboard/index.php/invoice/{{invoice.id}}" class="btn btn-link text-dark text-sm mb-0 px-0 ms-4"><i class="fas fa-file-pdf text-lg me-1"></i> PDF</a>
                    </div>
                    </li>
                    {% endfor %}
                </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const invoices = {{invoices | json_encode | raw}};

    if (invoices.length === 0) {
        document.getElementById('noOrders').style.display = 'block';
        document.getElementById('orderList').style.display = 'none';
    }
</script>